<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rectangle shape (filled background) -->
    <item android:drawable="@color/white" />

    <!-- Top stroke (line) -->
    <item
        android:left="0dp"
        android:right="-2dp"
        android:top="0dp"
        android:bottom="-2dp">
        <shape>
            <stroke
                android:width="0.5dp"
                android:color="@color/line_grey" />
        </shape>
    </item>
</layer-list>

