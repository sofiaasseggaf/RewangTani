<!-- shadowed_line.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background: A solid colored line -->
    <item android:drawable="@drawable/shadowed_line_background_white" />

    <!-- Shadow: A semi-transparent gradient that simulates a shadow at the bottom -->
    <item android:top="1dp">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#CECECE"
                android:centerColor="#80CACACA"
                android:endColor="#FFFFFF"
                 />
        </shape>
    </item>
</layer-list>
