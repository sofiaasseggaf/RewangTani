<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:background="@drawable/rect_info">

    <TextView
        android:id="@+id/judul_info"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:text="Hama Tikus "
        android:fontFamily="@font/inter_bold"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ket_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_regular"
        android:textSize="12sp"
        android:text="Disekitar Klaten, terjadi gagal panen yang cukup besar karena hama tikus yang melanda sebagian besar dari lahan pertanian warga setempat."
        />

    <TextView
        android:id="@+id/sumber_info"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:text="Sumber : Hartono"
        android:fontFamily="@font/inter_bold"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tgl_info"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:text="Klaten, 12 03 2021"
        android:fontFamily="@font/inter_regular"
        android:textSize="12sp"
        android:textAlignment="textEnd"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>

    </LinearLayout>
