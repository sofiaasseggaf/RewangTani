<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:padding="15dp">


    <ImageView
        android:id="@+id/checkBox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/rect_gray_fill_radius"/>

    <TextView
        android:id="@+id/namaToko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toko Pupuk Sejahtera"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_bold"
        android:textSize="12sp"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@id/checkBox"/>


    <ImageView
        android:id="@+id/imgWarung"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/img_event"
        android:scaleType="centerCrop"
        android:layout_below="@id/namaToko"
        android:layout_alignStart="@id/namaToko"
        android:layout_marginTop="10sp"/>

    <TextView
        android:id="@+id/namaWarung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traktor Tipe C"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_alignTop="@id/imgWarung"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgWarung" />

    <TextView
        android:id="@+id/jmlPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah = 1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgWarung"
        android:layout_below="@id/namaWarung"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/biayaWarung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 250.000"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/namaWarung"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter_bold"
        android:textColor="#16672E"
        android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_below="@id/rl1"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:background="#D9D9D9"/>

</RelativeLayout>
