<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_warung"
    tools:context=".middlebar.warungtenagakerja.DetailWarungTenagaKerja">

    <TextView
        android:id="@+id/txttop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/santelia_script_bold_dmo"
        android:text="Warung Tenaga Kerja"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/img_tenaga_kerja"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/txttop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_ket_produk"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/img_tenaga_kerja"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama_tenaga_kerja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sukirman"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black"
                android:textSize="26sp" />
            <TextView
                android:id="@+id/biaya_tenaga_kerja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.000 / Hari"
                android:fontFamily="@font/inter_light"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/ket_tenaga_kerja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jasa Buruh Tanam"
                android:fontFamily="@font/inter_light"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/lokasi_tenaga_kerja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jakarta Timur"
                android:fontFamily="@font/inter_light"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/terjual_warung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menyediakan Jasa : 20 kali"
                android:fontFamily="@font/inter_light"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_pisah_produk"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi :"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/deskripsi_tenaga_kerja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saya sudah menjadi tenaga kerja harian sejak tahun 1999, saya konsen dibidang pertanian terutama palawija. senang bisa membantu anda dalam membangun usaha pertanian anda. semoga kita cocok"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keahlian :"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/keahlian_tenaga_kerja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membajak Sawah
\nMengolah pupuk dan mencampur dengan tanah
\nMerawat Palawija dengan baik"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btn_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_whatsapp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>



    </ScrollView>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/bg_loading">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textloading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="100dp"
                android:fontFamily="@font/inter_bold"
                android:textSize="22sp"
                android:textColor="@color/dark_green"/>

        </RelativeLayout>

    </FrameLayout>


</RelativeLayout>